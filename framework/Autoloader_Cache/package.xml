 <notes>
* 
 </notes>
 <contents>
  <dir baseinstalldir="/" name="/">
   <dir name="bin">
    <file name="horde-autoloader-cache-prune" role="script" />
   </dir> <!-- /bin -->
   <dir name="doc">
    <dir name="Horde">
     <dir name="Autoloader">
      <dir name="Cache">
       <file name="COPYING" role="doc" />
      </dir> <!-- /doc/Horde/Autoloader/Cache -->
     </dir> <!-- /doc/Horde/Autoloader -->
    </dir> <!-- /doc/Horde -->
   </dir> <!-- /doc -->
   <dir name="lib">
    <dir name="Horde">
     <dir name="Autoloader">
      <file name="Cache.php" role="php" />
     </dir> <!-- /lib/Horde/Autoloader -->
    </dir> <!-- /lib/Horde -->
   </dir> <!-- /lib -->
  </dir> <!-- / -->
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.3.0</min>
   </php>
   <pearinstaller>
    <min>1.7.0</min>
   </pearinstaller>
   <package>
    <name>Horde_Autoloader</name>
    <channel>pear.horde.org</channel>
    <min>2.0.0beta1</min>
    <max>3.0.0alpha1</max>
    <exclude>3.0.0alpha1</exclude>
   </package>
   <extension>
    <name>json</name>
   </extension>
  </required>
  <optional>
   <extension>
    <name>apc</name>
   </extension>
   <extension>
    <name>eaccelerator</name>
   </extension>
   <extension>
    <name>xcache</name>
   </extension>
  </optional>
 </dependencies>
 <phprelease>
  <filelist>
   <install as="horde-autoloader-cache-prune" name="bin/horde-autoloader-cache-prune" />
   <install as="COPYING" name="doc/Horde/Autoloader/Cache/COPYING" />
   <install as="Horde/Autoloader/Cache.php" name="lib/Horde/Autoloader/Cache.php" />
  </filelist>
 </phprelease>
