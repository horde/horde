 <notes>
* [jan] Add Composer definition.
 </notes>
 <contents>
  <dir baseinstalldir="/" name="/">
   <dir name="doc">
    <dir name="Horde">
     <dir name="Mongo">
      <file name="COPYING" role="doc" />
     </dir> <!-- /doc/Horde/Mongo -->
    </dir> <!-- /doc/Horde -->
   </dir> <!-- /doc -->
   <dir name="lib">
    <dir name="Horde">
     <dir name="Mongo">
      <dir name="Collection">
       <file name="Index.php" role="php" />
      </dir> <!-- /lib/Horde/Mongo/Collection -->
      <file name="Client.php" role="php" />
     </dir> <!-- /lib/Horde/Mongo -->
    </dir> <!-- /lib/Horde -->
   </dir> <!-- /lib -->
  </dir> <!-- / -->
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.3.0</min>
    <max>6.0.0alpha1</max>
    <exclude>6.0.0alpha1</exclude>
   </php>
   <pearinstaller>
    <min>1.7.0</min>
   </pearinstaller>
   <package>
    <name>mongo</name>
    <channel>pecl.php.net</channel>
    <min>1.3.0</min>
    <providesextension>mongo</providesextension>
   </package>
  </required>
 </dependencies>
 <phprelease>
  <filelist>
   <install as="COPYING" name="doc/Horde/Mongo/COPYING" />
   <install as="Horde/Mongo/Client.php" name="lib/Horde/Mongo/Client.php" />
   <install as="Horde/Mongo/Collection/Index.php" name="lib/Horde/Mongo/Collection/Index.php" />
  </filelist>
 </phprelease>
